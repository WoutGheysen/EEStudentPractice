@model Oefenplatform.MVC.Areas.Teacher.Models.LangQuestions.LangQuestionsDetailVm
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

@if (ViewBag.Mode == "Detail")
{
    <div class="panel-body">
        <ul>
            <li>@Model.QuestionCategory</li>
            <li>@Model.Id</li>
            <li>@Model.QuestionTitle</li>
            <li>@Model.Description</li>
            <li>@Model.Answer</li>
            <li>@Model.FirstFeedback</li>
            <li>@Model.SecondFeedback</li>
        </ul>
        <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">Aanpassen</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Verwijderen</a>
    </div>
}
@if (ViewBag.Mode == "Edit" || ViewBag.Mode == "Create" )
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewBag.Mode == "Create")
                {
                    <div class="form-group">
                        <label asp-for="QuestionCategoryId" class="control-label"></label>
                        <select asp-for="QuestionCategoryId" class="form-control"
                                asp-items="@(new SelectList(Model.AvailableCategories,"Id","CategoryQuestion"))">
                            <option value="">-- Pick a category --</option>
                        </select>
                        <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
                    </div>
                }
                @if (ViewBag.Mode == "Edit")
                {
                    <div class="form-group">
                        <label asp-for="QuestionCategoryId" class="control-label"></label>
                        <input asp-for="QuestionCategoryId" class="form-control" readonly="readonly" />
                        <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QuestionCategory" class="control-label"></label>
                        <input asp-for="QuestionCategory" class="form-control" readonly="readonly" />
                        <span asp-validation-for="QuestionCategory" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionTitle" class="control-label">Titel van de Vraag</label>
                    <input asp-for="QuestionTitle" class="form-control" />
                    <span asp-validation-for="QuestionTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Beschrijving</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnswerId" class="control-label"></label>
                    <input asp-for="AnswerId" class="form-control" readonly="readonly" />
                    <span asp-validation-for="AnswerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Answer" class="control-label">Antwoord</label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstFeedbackId" class="control-label"></label>
                    <input asp-for="FirstFeedbackId" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FirstFeedbackId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstFeedback" class="control-label">Eerste Respons</label>
                    <input asp-for="FirstFeedback" class="form-control" />
                    <span asp-validation-for="FirstFeedback" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondFeedbackId" class="control-label"></label>
                    <input asp-for="SecondFeedbackId" class="form-control" readonly="readonly" />
                    <span asp-validation-for="SecondFeedbackId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondFeedback" class="control-label">Tweede Respons</label>
                    <input asp-for="SecondFeedback" class="form-control" />
                    <span asp-validation-for="SecondFeedback" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Save" class="btn-success">Opslaan</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}