@model Oefenplatform.MVC.Areas.Teacher.Models.LangFirstQuestions.LangFirstQuestionDetailVm

@{
    ViewData["Title"] = "Detail";
}

@if (ViewBag.Mode == "Detail")
{
    <h1>Detail Overzicht</h1>
    <div class="panel-body">
        <ul>
            <li>ID: @Model.Id</li>
            <li>Titel: @Model.QuestionTitle</li>
            <li>Afbeelding: @Model.FileName</li>
            <li>Antwoord: @Model.Answer</li>
            <li>Feedback: @Model.FirstFeedback</li>
            <li>Feedback: @Model.SecondFeedback</li>
            <li><img src="~/images/LangFirstQuestions/@Model.FileName" /></li>
        </ul>

        <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">Aanpassen</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Verwijderen</a>
    </div>
    <br />
    <br />
    <div>
        <a class="btn btn-colour-custom" asp-action="Index">Back to List</a>
    </div>
}
@if (ViewBag.Mode == "Edit" || ViewBag.Mode == "Create")
{
    <h1>Aanmaken of Aanpassen</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Save" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label" hidden="hidden"></label>
                    <input asp-for="Id" class="form-control" readonly="readonly" hidden="hidden" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionTitle" class="control-label">Titel van de Vraag</label>
                    <input asp-for="QuestionTitle" class="form-control" />
                    <span asp-validation-for="QuestionTitle" class="text-danger"></span>
                </div>
                @if (ViewBag.Mode == "Edit")
                {
                    <div class="form-group">
                        <label asp-for="FileName" class="control-label">Afbeelding Naam</label>
                        <input asp-for="FileName" class="form-control" readonly="readonly" />
                        <span asp-validation-for="FileName" class="text-danger"></span>
                        <img src="~/images/LangFirstQuestions/@Model.FileName" />
                    </div>
                }
                <div class="form-group">
                    <label>Afbeelding Opladen</label>
                    <input type="file" name="picture" />
                </div>
                <div class="form-group">
                    <label asp-for="AnswerId" class="control-label" hidden="hidden"></label>
                    <input asp-for="AnswerId" class="form-control" readonly="readonly" hidden="hidden" />
                    <span asp-validation-for="AnswerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Answer" class="control-label">Antwoord</label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstFeedbackId" class="control-label" hidden="hidden"></label>
                    <input asp-for="FirstFeedbackId" class="form-control" readonly="readonly" hidden="hidden" />
                    <span asp-validation-for="FirstFeedbackId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstFeedback" class="control-label">Eerste Respons</label>
                    <input asp-for="FirstFeedback" class="form-control" />
                    <span asp-validation-for="FirstFeedback" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondFeedbackId" class="control-label" hidden="hidden"></label>
                    <input asp-for="SecondFeedbackId" class="form-control" readonly="readonly" hidden="hidden" />
                    <span asp-validation-for="SecondFeedbackId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondFeedback" class="control-label">Tweede Respons</label>
                    <input asp-for="SecondFeedback" class="form-control" />
                    <span asp-validation-for="SecondFeedback" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Save" class="btn-success">Opslaan</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-colour-custom" asp-action="Index">Back to List</a>
    </div>
}

