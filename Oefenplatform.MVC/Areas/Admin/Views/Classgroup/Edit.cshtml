@model Oefenplatform.MVC.Areas.Admin.Models.ClassGroupDetailViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wijzig klasgroep gegevens</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClassGroupName" class="control-label"></label>
                <input asp-for="ClassGroupName" class="form-control" />
                <span asp-validation-for="ClassGroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearGrade" class="control-label"></label>
                <select title="selecteer een klas" asp-for="SelectedYearGradeId" asp-items="Model.YearGradeOptions">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Classgroup" asp-action="Index">Terug naar klasgroepen lijst</a>
</div>
