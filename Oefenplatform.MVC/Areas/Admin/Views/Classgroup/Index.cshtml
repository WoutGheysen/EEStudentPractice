@model Oefenplatform.MVC.Areas.Admin.Models.ClassGroupViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Klasgroepen</h1>

<a asp-controller="Classgroup" asp-action="Add">Nieuwe groep</a>

@foreach (var item in Model.classGroups)
{
    <label>@item.ClassGroupName</label>
    <a asp-controller="Classgroup" asp-action="Edit" asp-route-id="@item.Id">Wijzigen</a>
    <form asp-action="Delete">
        <input type="hidden" asp-for="@item.Id" />
        <input type="submit" value="Verwijder" class="btn btn-danger" />
    </form>
}
